<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1"
    android:background="#ff000000"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="#fffcfcfc"
            android:textSize="25dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:textAlignment="textEnd"
            android:textColor="#fffffcfe"
            android:textSize="35dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MC"
            android:id="@+id/button2"
            android:background="#ff484848"
            android:textColor="#ffffa232"
            android:layout_margin="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M+"
            android:id="@+id/button"
            android:background="#ff484848"
            android:textColor="#ffffa232"
            android:layout_margin="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M-"
            android:id="@+id/button3"
            android:background="#ff484848"
            android:textColor="#ffffa232"
            android:layout_margin="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MR"
            android:id="@+id/button4"
            android:background="#ff484848"
            android:textColor="#ffffa232"
            android:layout_margin="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/button5"
            android:background="#ff404040"
            android:textColor="#ff6792ff"
            android:onClick="click_number"
            android:layout_margin="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+/-"
            android:id="@+id/button6"
            android:background="#ff404040"
            android:textColor="#ff6792ff"
            android:onClick="click_operations"
            android:layout_margin="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/button7"
            android:background="#ff404040"
            android:textColor="#ff6792ff"
            android:onClick="click_operations"
            android:layout_margin="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:id="@+id/button8"
            android:background="#ff404040"
            android:textColor="#ff6792ff"
            android:onClick="click_operations"
            android:layout_margin="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/button9"
            android:background="#ff606060"
            android:textColor="#fffef3ff"
            android:onClick="click_number"
            android:layout_margin="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/button10"
            android:background="#ff606060"
            android:textColor="#fffef3ff"
            android:onClick="click_number"
            android:layout_margin="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/button11"
            android:background="#ff606060"
            android:textColor="#fffef3ff"
            android:onClick="click_number"
            android:layout_margin="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/button12"
            android:background="#ff404040"
            android:textColor="#ff6792ff"
            android:onClick="click_operations"
            android:layout_margin="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/button13"
            android:background="#ff606060"
            android:textColor="#fffef3ff"
            android:onClick="click_number"
            android:layout_margin="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/button14"
            android:background="#ff606060"
            android:textColor="#fffef3ff"
            android:onClick="click_number"
            android:layout_margin="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/button15"
            android:background="#ff606060"
            android:textColor="#fffef3ff"
            android:onClick="click_number"
            android:layout_margin="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/button16"
            android:background="#ff404040"
            android:textColor="#ff6792ff"
            android:onClick="click_operations"
            android:layout_margin="2dp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="176dp"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="176dp"
                android:layout_height="fill_parent" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/button18"
                    android:background="#ff606060"
                    android:textColor="#fffef3ff"
                    android:onClick="click_number"
                    android:layout_margin="2dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/button17"
                    android:background="#ff606060"
                    android:textColor="#fffef3ff"
                    android:onClick="click_number"
                    android:layout_margin="2dp" />
            </LinearLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/button19"
                android:background="#ff606060"
                android:textColor="#fffef3ff"
                android:onClick="click_number"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/button20"
                    android:background="#ff606060"
                    android:textColor="#fffef3ff"
                    android:onClick="click_number"
                    android:layout_weight="1"
                    android:layout_margin="2dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:id="@+id/button21"
                    android:background="#ff606060"
                    android:textColor="#fffef3ff"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:onClick="click_number" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="="
                android:id="@+id/button22"
                android:background="#ff404040"
                android:textColor="#ffffbf1a"
                android:onClick="click_operations"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

    </GridLayout>

</LinearLayout>
