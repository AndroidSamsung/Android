<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"

    android:background="#fff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".18">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/resultdisplay"
            android:textColor="#ff1b40f6"
            android:textSize="30dp"
            android:maxLines="1"
            android:paddingBottom="0dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/tfdisplay"
            android:textColor="#ff1b40f6"
            android:textSize="30dp"
            android:maxLines="1"
            android:textStyle="bold"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".12">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonMemC"
            android:id="@+id/button"
            style="@style/ButtonBase.Memory" />

        <Button
            style="@style/ButtonBase.Memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonMemMas"
            android:id="@+id/button2" />

        <Button
            style="@style/ButtonBase.Memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonMemMenos"
            android:id="@+id/button3" />

        <Button
            style="@style/ButtonBase.Memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonMemReset"
            android:id="@+id/button4" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".12">

        <Button
            style="@style/ButtonBase.Operations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonClear"
            android:id="@+id/button17"
            android:onClick="eventoButtonOperacionesespeciales" />

        <Button
            style="@style/ButtonBase.Operations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonNegativo"
            android:id="@+id/button18"
            android:onClick="eventoButtonOperacionesespeciales" />

        <Button
            style="@style/ButtonBase.Operations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonDivicion"
            android:id="@+id/button19"
            android:onClick="eventoButtonOperaciones" />

        <Button
            style="@style/ButtonBase.Operations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonMultiplicacion"
            android:id="@+id/button20"
            android:onClick="eventoButtonOperaciones" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".14">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonNumer7"
            android:id="@+id/button5"
            style="@style/ButtonBase.Number"
            android:onClick="eventoButtonNumero" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonNumer8"
            android:id="@+id/button6"
            style="@style/ButtonBase.Number"
            android:onClick="eventoButtonNumero" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonNumer9"
            android:id="@+id/button7"
            style="@style/ButtonBase.Number"
            android:onClick="eventoButtonNumero" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonMenos"
            android:id="@+id/button8"
            style="@style/ButtonBase.Operations"
            android:onClick="eventoButtonOperaciones" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".14">

        <Button
            style="@style/ButtonBase.Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonNumer4"
            android:id="@+id/button9"
            android:onClick="eventoButtonNumero" />

        <Button
            style="@style/ButtonBase.Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonNumer5"
            android:id="@+id/button10"
            android:onClick="eventoButtonNumero" />

        <Button
            style="@style/ButtonBase.Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonNumer6"
            android:id="@+id/button11"
            android:onClick="eventoButtonNumero" />

        <Button
            style="@style/ButtonBase.Operations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonMas"
            android:id="@+id/button12"
            android:onClick="eventoButtonOperaciones" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".28">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".75"
            android:orientation="vertical"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".50"
                android:textSize="25sp">

                <Button
                    style="@style/ButtonBase.Number"
                    android:text="@string/buttonNumer1"
                    android:id="@+id/button13"
                    android:layout_height="wrap_content"
                    android:onClick="eventoButtonNumero" />

                <Button
                    style="@style/ButtonBase.Number"
                    android:text="@string/buttonNumer2"
                    android:id="@+id/button14"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:onClick="eventoButtonNumero" />

                <Button
                    style="@style/ButtonBase.Number"
                    android:text="@string/buttonNumer3"
                    android:id="@+id/button15"
                    android:layout_height="wrap_content"
                    android:onClick="eventoButtonNumero" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".50">

                <Button
                    style="@style/ButtonBase.Number"
                    android:text="@string/buttonNumer0"
                    android:id="@+id/button21"
                    android:layout_weight=".70"
                    android:layout_height="wrap_content"
                    android:onClick="eventoButtonNumero" />

                <Button
                    style="@style/ButtonBase.Number"
                    android:text="@string/buttonDecimal"
                    android:id="@+id/button22"
                    android:layout_weight=".34"
                    android:layout_height="wrap_content"
                    android:onClick="eventoButtonNumero" />
            </LinearLayout>
        </LinearLayout>

        <Button
            style="@style/ButtonBase.Igual"
            android:id="@+id/button16"
            android:text="@string/buttonIgual"
            android:layout_marginBottom="19dp"
            android:onClick="eventoButtonOperaciones" />

    </LinearLayout>

</LinearLayout>
